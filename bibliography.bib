author = {Novichkov, Pavel S. and Laikova, Olga N. and Novichkova, Elena S. and
                  Gelfand, Mikhail S. and Arkin, Adam P. and Dubchak, Inna and
                  Rodionov, Dmitry A.}, 
title = {{R}eg{P}recise: a database of curated genomic inferences of transcriptional
                  regulatory interactions in prokaryotes},
volume = {38}, 
